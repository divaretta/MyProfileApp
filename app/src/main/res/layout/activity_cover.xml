<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cover">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skye">
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/aku" />
    <TextView
        android:id="@+id/text_wlcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/keep_on_truckin"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>
    <Button
        android:id="@+id/btnClickToStart"
        android:layout_below="@id/text_wlcm"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="130dp"
        android:background="#B4A2C6"
        android:fontFamily="@font/little_zombie"
        android:text="@string/go"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</RelativeLayout>